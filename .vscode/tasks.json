{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "save and compile for C++",
        "command": "/usr/bin/g++",
        "args": [
          "-g3",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
